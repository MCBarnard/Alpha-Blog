<h2 class="text-center mt-4"><%= @article.title %></h2>
<div class='container'>
    <div class="row justify-content-md-center">
      <div class="col-8  mt-2 mb-2">
        <div class="card text-center shadow">
          <div class="card-header">
            <i>by <%= @article.user.username =%></i>
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@article.description) =%></div>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-success"%>
            <%= link_to "Delete", article_path(@article), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago</small>
          </div>
        </div>
    </div>
  </div>
</div>