<h1 class="text-center mt-4">Listing all Articles</h1>

<div class='container'>
  <% @articles.each do |item| %>
    <div class="row justify-content-md-center">
      <div class="col-8  mt-2 mb-2">
        <div class="card text-center shadow">
          <div class="card-header">
            <i>by <%= item.user.username =%></i>
          </div>
          <div class="card-body">
            <h5><%= link_to item.title, article_path(item), class: "text-success"%></h5>
            <p class="card-text"><%= truncate(item.description, length: 100) =%></p>
            <%= link_to "View", article_path(item), class: "btn btn-outline-primary"%>
            <%= link_to "Edit", edit_article_path(item), class: "btn btn-outline-success"%>
            <%= link_to "Delete", article_path(item), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(item.created_at) %> ago</small>
          </div>
        </div>
    </div>
  </div>
  <% end %>
</div>